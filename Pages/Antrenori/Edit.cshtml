@page
@model Laslo_Antonio_examen.Pages.Antrenori.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Antrenor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Antrenor.ID" />
            <div class="form-group">
                <label asp-for="Antrenor.Name" class="control-label"></label>
                <input asp-for="Antrenor.Name" class="form-control" />
                <span asp-validation-for="Antrenor.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Antrenor.Workout" class="control-label"></label>
                <input asp-for="Antrenor.Workout" class="form-control" />
                <span asp-validation-for="Antrenor.Workout" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Antrenor.Price" class="control-label"></label>
                <input asp-for="Antrenor.Price" class="form-control" />
                <span asp-validation-for="Antrenor.Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Antrenor.PublishingDate" class="control-label"></label>
                <input asp-for="Antrenor.PublishingDate" class="form-control" />
                <span asp-validation-for="Antrenor.PublishingDate" class="textdanger"></span>
            </div>
            <label asp-for="Antrenor.TrainingPartnerID" class="control-label">TrainingPartner Name</label>
            <select asp-for="Antrenor.TrainingPartnerID" class="form-control" asp-items="ViewBag.TrainingPartnerID">
            </select>
            <span asp-validation-for="Antrenor.TrainingPartnerID" class="text-danger"></span>
            <div class="form-group">
                <div class="form-group">
                    <div class="table">
                        <table>
                            <tr>
                                @{
                                    int cnt = 0;
                                    foreach (var cat in Model.AssignedCategoryDataList)
                                    {
                                        if (cnt++ % 3 == 0)
                                        {
                                        @:</tr><tr>
                                        }
                                        @:<td>
                                            <input type="checkbox"
                                                   name="selectedCategories"
                                                   value="@cat.CategoryID"
                                                   @(Html.Raw(cat.Assigned ? "checked=\"checked\"" : "")) />
                                            @cat.CategoryID @: @cat.Name
                                        @:</td>
                                    }
                                @:</tr>
                                }
                            </table>
                        </div>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
</form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
