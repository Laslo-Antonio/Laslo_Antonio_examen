@page "/{id:int?}"
@model Laslo_Antonio_examen.Pages.Antrenori.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Antrenor[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Antrenor[0].Workout)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Antrenor[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Antrenor[0].PublishingDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Antrenor[0].TrainingPartner.TrainingPartnerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Antrenor[0].AntrenorCategories)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.AntrenorD.Antrenori)
        {
            string selectedRow = "";
            if (item.ID == Model.AntrenorID)
            {
                selectedRow = "table-success";
            }
            <tr class="@selectedRow">
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Workout)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PublishingDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TrainingPartner.TrainingPartnerName)
                </td>
                <td>
                    @{
                        foreach (var category in item.AntrenorCategories)
                        {
                            @category.Category.ID @: @category.Category.CategoryName <br />
                        }
                    }
                </td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
